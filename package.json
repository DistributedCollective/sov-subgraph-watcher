{
  "name": "sov-subgraph-watcher",
  "version": "0.0.1",
  "main": "src/index.ts",
  "author": "Victor Creed <victor@sovryn.app>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "~18.16.1"
  },
  "scripts": {
    "start:dev": "NODE_PATH=./src ts-node-dev --respawn --exit-child ./src/index.ts",
    "build": "rimraf build && tsc",
    "start": "NODE_ENV=production NODE_PATH=./build node ./build/index.js",
    "generate": "yarn prisma generate",
    "dev": "./scripts/dev.sh",
    "docker:bash": "docker-compose exec api-server bash",
    "lint": "eslint --ext .ts src",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "postinstall": "yarn generate"
  },
  "dependencies": {
    "@prisma/client": "~5.2.0",
    "convict": "~6.2.4",
    "graphql": "^16.8.0",
    "graphql-request": "^6.1.0",
    "pino": "^8.15.0",
    "prisma": "~5.2.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@types/convict": "^6.1.3",
    "@types/node": "~18.16.1",
    "@typescript-eslint/eslint-plugin": "~5.48.0",
    "@typescript-eslint/parser": "~5.48.0",
    "eslint": "~8.31.0",
    "eslint-config-prettier": "~8.6.0",
    "eslint-plugin-import": "~2.26.0",
    "eslint-plugin-prettier": "~4.2.1",
    "pino-pretty": "^10.2.0",
    "prettier": "~2.8.1",
    "rimraf": "~5.0.1",
    "ts-node-dev": "~2.0.0",
    "typescript": "~5.1.6"
  },
  "prisma": {
    "schema": "./prisma/schema.prisma",
    "seed": "node ./prisma/seed.js"
  }
}
